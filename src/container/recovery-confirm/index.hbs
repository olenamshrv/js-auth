<div class='page page--background'>
  <header>
    {{> back-button}}
  </header>

  <form class="page__section">
    <h1 class="page__title">Відновлення паролю</h1>

    <div class="form">

      <div class="form__item">
        {{> field action="recoveryConfirmForm.change" type="number" name="code" label="Код" placeholder="Ваш код"}}
        <span name='code' class="form__error">Помилка</span>
      </div>

      <div class="form__item">
        {{> field-password action="recoveryConfirmForm.change" name="password" label="Новий пароль" placeholder="Введіть пароль"}}
        <span name='password' class="form__error">Помилка</span>
      </div>

      <div class="form__item">
        {{> field-password action="recoveryConfirmForm.change" name="passwordAgain" label="Новий пароль ще раз" placeholder="Введіть пароль" text="Увага, пароль неправильний!"}}
        <span name='passwordAgain' class="form__error">Помилка</span>
      </div>

    </div>

    <button class="button button--disabled" type="button" onclick="recoveryConfirmForm.submit()">Змінити пароль</button>

    <span class="alert alert--disabled">Увага, помилка!</span>
  </form>
</div>