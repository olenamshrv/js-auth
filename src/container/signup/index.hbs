{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}

<div class='page page--background'>
  <header>
    {{> back-button}}
  </header>

  <form class="page__section">
    <h1 class="page__title">Реєстрація</h1>

    <div class="form">

      <div class="form__item">
        {{> form-field action="signupForm.change" type="email" name="email" label="Ел. адреса" placeholder="fly1prod@gmail.com"}}
        <span name='email' class="form__error">Помилка</span>
      </div>

      <div class="form__item">
        {{> field-select action="signupForm.change" name="role" label="Роль" placeholder="Оберіть роль" options=data.role}}
        <span name='role' class="form__error">Помилка</span>
      </div>

      <div class="form__item">
        {{> field-password action="signupForm.change" type='password' name="password" label="Пароль" placeholder="Введіть пароль"}}
        <span name='password' class="form__error">Помилка</span>
      </div>

      <div class="form__item">
        {{> field-password action="signupForm.change" type='password' name="password-repeat" label="Пароль ще раз" placeholder="Введіть пароль" text="Увага, пароль неправильний!"}}
        <span name='password' class="form__error">Помилка</span>
      </div>

      <div class="form__item">
        <div class="form__checkbox">
          <input type="checkbox" class="form__checkbox__input">
          <span onclick='
          fieldCheckbox.toggle(this);
          
          signupForm.change(this.name, this.value);
          '
          class="form__checkbox__icon"
          name="isConfirm"></span>
          <span class="form__checkbox__text">Ви погоджуєтеся з правилами сервіса</span>
        </div>

        <span name='isConfirm' class="form__error">Помилка</span>
      </div>
    </div>

    <button class="form__button" type="button" onclick="signupForm.submit()">Зареєструватися</button>

    <span class="form__alert form__alert--error">Увага, помилка!</span>
  </form>
</div>

