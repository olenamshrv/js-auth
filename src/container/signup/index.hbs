<div class='page page--background'>
  <header>
    {{> back-button}}
  </header>

  <form class="page__section">
    <h1 class="page__title">Реєстрація</h1>

    <div class="form">

      <div class="form__item">
        {{> field action="signupForm.change" type="email" name="email" label="Ел. адреса" placeholder="Ваш e-mail"}}
        <span name='email' class="form__error">Помилка</span>
      </div>

      <div class="form__item">
        {{> field-select action="signupForm.change" name="role" label="Роль" placeholder="Оберіть роль" list=data.role}}
        <span name='role' class="form__error">Помилка</span>
      </div>

      <div class="form__item">
        {{> field-password action="signupForm.change" name="password" label="Пароль" placeholder="Введіть пароль"}}
        <span name='password' class="form__error">Помилка</span>
      </div>

      <div class="form__item">
        {{> field-password action="signupForm.change" name="passwordAgain" label="Пароль ще раз" placeholder="Введіть пароль" text="Увага, пароль неправильний!"}}
        <span name='passwordAgain' class="form__error">Помилка</span>
      </div>

      <div class="form__item">
        {{> field-checkbox action="signupForm.change" name="isConfirm" label="Ви погоджуєтеся з правилами сервіса"}}
        <span name='isConfirm' class="form__error">Помилка</span>
      </div>
    </div>

    <button class="button button--disabled" type="button" onclick="signupForm.submit()">Зареєструватися</button>

    <span class="alert alert--disabled">Увага, помилка!</span>

    <span class="link__prefix">Маєте акаунт? <a href="/login" class="link">Увійти</a></span>
  </form>
</div>