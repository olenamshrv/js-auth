<div class='form__field'>

  <label class='field__label' for='{{name}}'>
    {{label}}
  </label>

  <div class='select__wrapper pointerArea'>
    <div
      onclick='fieldSelect.toggleList()'
      class='field--select'
      name='{{name}}'
      id='{{name}}'
    >
      <div class='field__placeholder'>{{placeholder}}</div>
      <span class='field__icon'></span>
    </div>

    <ul class='options-list'>
      {{#each options}}
        <li
          onclick='
          fieldSelect.changeOption(this)
          
          {{../action}}("{{../name}}", {{value}})
          '
          value='{{value}}'
          class='list__option'
        >{{text}}
        </li>
      {{/each}}
    </ul>

  </div>
</div>

